<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Proje</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body { background-color: #f4f6f9; }
        .sidebar { background-color: #343a40; color: white; min-height: 100vh; padding: 20px; }
        .content { padding: 20px; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Partial View Burada Kullanılacak -->
            <div class="col-md-3 sidebar">
                <h3>Menü</h3>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link text-white" href="/Home/Index">Ana Sayfa</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Weather/Manuel">Manuel Tahmin</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Admin/Index">Admin Panel (CRUD)</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="/Account/Login">Çıkış Yap</a></li>
                </ul>
                <hr />
                <!-- Partial View Çağrısı -->
                @await Html.PartialAsync("_SonKayitlarPartial")
            </div>
            <div class="col-md-9 content">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>