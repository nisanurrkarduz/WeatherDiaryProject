@model Web.Entity.User
@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>Kullanıcı Profili</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Profil Resmi">
                    <h4>@Model.Username</h4>
                    <p class="text-muted">@Model.Role?.RoleName</p>
                </div>
                <div class="col-md-8">
                    <h5>Bilgilerim</h5>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Email:</div>
                        <div class="col-sm-9">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">Kayıt Tarihi:</div>
                        <div class="col-sm-9">@Model.CreatedAt?.ToString("dd.MM.yyyy")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h4>Geçmiş Hava Durumu Sorgularım</h4>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Şehir</th>
                    <th>Sıcaklık</th>
                    <th>Duygu Durumu</th>
                    <th>Hava Tipi</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DailyLogs != null && Model.DailyLogs.Any())
                {
                    @foreach (var log in Model.DailyLogs.OrderByDescending(x => x.LogDate))
                    {
                        <tr>
                            <td>@log.LogDate?.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@log.City?.CityName</td>
                            <td>@log.Temperature °C</td>
                            <td>
                                @if(log.Temperature > 25)
                                {
                                    <span class="badge bg-success">Mutlu</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Stresli</span>
                                }
                            </td>
                            <td>@log.WeatherType?.TypeName</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Henüz kayıt bulunmamaktadır.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
