 @model Web.Entity.DailyLog
@{
    ViewData["Title"] = "Kayıt Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4>Kayıt Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="LogId" />
                        
                        <div class="mb-3">
                            <label class="form-label">Şehir</label>
                            <select asp-for="CityId" class="form-select" 
                                    asp-items="@(new SelectList(ViewBag.Cities, "CityId", "CityName"))">
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kullanıcı</label>
                            <select asp-for="UserId" class="form-select" 
                                    asp-items="@(new SelectList(ViewBag.Users, "UserId", "Username"))">
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Temperature" class="form-label">Sıcaklık (°C)</label>
                                <input asp-for="Temperature" class="form-control" type="number" step="0.1" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Humidity" class="form-label">Nem (%)</label>
                                <input asp-for="Humidity" class="form-control" type="number" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hava Tipi</label>
                            <select asp-for="WeatherTypeId" class="form-select" 
                                    asp-items="@(new SelectList(ViewBag.WeatherTypes, "TypeId", "TypeName"))">
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LogDate" class="form-label">Tarih</label>
                            <input asp-for="LogDate" class="form-control" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-save me-1"></i> Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
